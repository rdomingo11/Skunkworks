@page "/launches"

<h1>SpaceX Launches</h1>

@if (launches == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Is Tentative</th>
                <th>Launch Date Local</th>
                <th>Mission Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var launch in launches)
            {
                <tr>
                    <td>@launch.Id </td>
                    <td>@launch.IsTentative </td>
                    <td>@launch.LaunchDateLocal</td>
                    <td>@launch.MissionName </td>
                </tr>
            }
        </tbody>
    </table>
}